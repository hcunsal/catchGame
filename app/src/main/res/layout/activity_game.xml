<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="229dp"
        android:layout_height="0dp"
        android:layout_marginBottom="459dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Score: 0"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText" />

    <TextView
        android:id="@+id/timeText"
        android:layout_width="214dp"
        android:layout_height="0dp"
        android:layout_marginTop="29dp"
        android:layout_marginBottom="102dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="Time: 20"
        android:textAllCaps="false"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="54dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timeText">


        <ImageView
            android:id="@+id/character"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character2"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character5"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="1"
            android:layout_column="2"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character6"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character7"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

        <ImageView
            android:id="@+id/character8"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_row="2"
            android:layout_column="2"
            android:onClick="scoreClick"
            app:srcCompat="@drawable/character" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>